<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:key="coordinates"
        app:entries="@array/coord_entries"
        app:entryValues="@array/coord_values"
        app:title="Coordinate Format"
        app:summary="%s"
        app:dialogTitle="Coordinate Format"
        app:icon="@drawable/crosshair"
        app:layout="@layout/preference_layout"/>

    <ListPreference
        app:key="distance"
        app:entries="@array/dist_entries"
        app:entryValues="@array/dist_values"
        app:title="Distance Unit"
        app:summary="%s"
        app:dialogTitle="Distance Unit"
        app:icon="@drawable/ruler"
        app:layout="@layout/preference_layout"/>


</PreferenceScreen>