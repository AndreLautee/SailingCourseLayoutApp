<resources>

    <!-- Base application theme. -->
    @<style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarPopupTheme">@style/PopUpTheme</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="titleTextStyle">@style/ActionBarTitle</item>
        <item name="background">@color/colorPrimary</item>
    </style>
    <style name="ActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PopUpTheme" parent="Widget.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:itemTextAppearance">@style/PopUpTextAppearance</item>
    </style>
    <style name="PopUpTextAppearance">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/colorOnPrimary</item>
        <item name="android:src">@drawable/baseline_menu_black_24dp</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorOnSecondary</item>
        <item name="colorControlActivated">@color/colorSecondaryLight</item>
    </style>

    <style name="Widget.SCLApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.SCLApp.TextInputLayout.HintText</item>
        <item name="suffixTextAppearance">@style/TextAppearance.SCLApp.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/textInputOutlineColor</item>
    </style>

    <style name="TextAppearance.SCLApp.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColorHint">?android:attr/textColorPrimary</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.SCLApp.TextInputLayout.HelperText" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <declare-styleable name="LayoutGLSurfaceView">

    </declare-styleable>
</resources>
