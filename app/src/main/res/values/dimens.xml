    <dimen name="design_bottom_navigation_text_size" tools:override="true">12sp</dimen>
    <dimen name="design_bottom_navigation_icon_size" tools:override="true">24dp</dimen>
    <dimen name="design_bottom_navigation_height" tools:override="true">60dp</dimen>

    <!-- COURSE SELECTION PAGE -->
