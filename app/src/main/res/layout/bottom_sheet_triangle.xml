<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_trapezoid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="150dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/LinearLayout1">

            <View
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@id/LinearLayout2"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="68dp"
                    android:layout_height="66dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/trapezoid_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:text="TRIANGLE\nExpand to edit\ntriangle properties"
                    android:textSize="15sp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/change_icon"
                    android:layout_gravity="center"
                    android:layout_marginStart="70dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/LinearLayout3"
                >

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:id="@+id/textView_angle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/angle"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

                <RadioGroup
                    android:id="@+id/radioGroup_angle"
                    android:layout_width="240dp"
                    android:layout_height="37dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    >

                    <RadioButton
                        android:id="@+id/rb_angle_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60°, 60°, 60°" />

                    <RadioButton
                        android:id="@+id/rb_angle_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="45°, 90°, 45°" />
                </RadioGroup>

                <TextView
                    android:id="@+id/textView_CourseOrientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/course_orientation"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/radioGroup_type"
                    android:layout_width="231dp"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb_starboard"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="@string/starboard"
                        />

                    <RadioButton
                        android:id="@+id/rb_portboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/portboard" />
                </RadioGroup>


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_calculate"
                    android:layout_width="154.5dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/calculate_button" />
            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>