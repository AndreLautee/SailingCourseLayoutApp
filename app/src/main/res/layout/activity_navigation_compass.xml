<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_navigationCompass"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navCompass_top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:menu="@menu/top_navigation_menu"
        app:itemIconTint="@color/top_nav_colour"
        app:itemTextColor="@color/top_nav_colour"
        />
    <RelativeLayout
        android:id="@+id/activity_compass"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >



        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/line"
            android:translationZ="1dp"/>
        <ImageView
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/navcompass"
            android:id="@+id/img_compass"
            />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:src="@drawable/arrow" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        >


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_NavCompBear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BEARING\nTO MARK"
                android:layout_gravity="center"
                android:textColor="@color/colorOnSecondary"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_NavCompDist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DISTANCE\nTO MARK"
                android:layout_gravity="center"
                android:textColor="@color/colorOnSecondary"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text_NavCompHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorSecondaryDark"
                android:textSize="20dp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CURRENT\nHEADING"
                android:layout_gravity="center"
                android:textColor="@color/colorOnSecondary"
                android:textSize="12dp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>

    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:translationZ="2dp"
        android:textColor="#64D8CB"
        android:id="@+id/rgNavCompass"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"

        />
</RelativeLayout>

</LinearLayout>

