<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_trapezoid"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="150dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/LinearLayout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LinearLayout2"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    >
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/course_selection_button"
                        android:clickable="false"/>
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_optimist"
                        android:tint="@color/colorOnSecondary"
                        android:translationZ="2dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:gravity="center_vertical"
                    android:text="OPTIMIST\nExpand to edit optimist properties"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/LinearLayout3"
                >

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textView_CourseOrientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/course_orientation"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />
                <RadioGroup
                    android:id="@+id/radioGroup_type"
                    android:layout_width="231dp"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rb_starboard"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:text="@string/starboard"
                        />

                    <RadioButton
                        android:id="@+id/rb_portboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/portboard" />
                </RadioGroup>


                <Button
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_margin="30dp"
                    android:id="@+id/img_calculate"
                    android:layout_gravity="center"
                    android:padding="15dp"
                    android:background="@drawable/home_start_button"
                    android:textSize="16dp"
                    android:text="CALCULATE"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/colorOnSecondary"
                    android:drawableLeft="@drawable/path" />

            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>

</LinearLayout>