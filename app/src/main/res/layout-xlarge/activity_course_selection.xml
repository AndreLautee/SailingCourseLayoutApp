<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/optimist"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_optimist"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="@+id/img_optimist"
        app:layout_constraintTop_toBottomOf="@+id/img_optimist" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/windward"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_straight"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/img_straight"
        app:layout_constraintTop_toBottomOf="@+id/img_straight" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/trapezoid"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_trapezoid"
        app:layout_constraintStart_toStartOf="@+id/img_trapezoid"
        app:layout_constraintTop_toBottomOf="@+id/img_trapezoid" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appCompatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/triangle"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_triangle"
        app:layout_constraintStart_toStartOf="@+id/img_triangle"
        app:layout_constraintTop_toBottomOf="@+id/img_triangle" />

    <ImageView
        android:id="@+id/img_optimist"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_optimist"
        android:tint="@color/colorOnSecondary"
        android:translationZ="4dp"
        app:layout_constraintBottom_toBottomOf="@id/button4"
        app:layout_constraintEnd_toEndOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/button4"
        app:layout_constraintTop_toTopOf="@id/button4" />

    <ImageView
        android:id="@+id/img_straight"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_windward_leeward"
        android:tint="@color/colorOnSecondary"
        android:translationZ="4dp"
        app:layout_constraintStart_toStartOf="@id/button3"
        app:layout_constraintEnd_toEndOf="@id/button3"
        app:layout_constraintTop_toTopOf="@id/button3"
        app:layout_constraintBottom_toBottomOf="@id/button3"/>

    <ImageView
        android:id="@+id/img_trapezoid"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_trapezoid"
        android:tint="@color/colorOnSecondary"
        android:translationZ="4dp"
        app:layout_constraintStart_toStartOf="@id/button2"
        app:layout_constraintEnd_toEndOf="@id/button2"
        app:layout_constraintTop_toTopOf="@id/button2"
        app:layout_constraintBottom_toBottomOf="@id/button2"/>

    <ImageView
        android:id="@+id/img_triangle"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/ic_triangle_layout"
        android:tint="@color/colorOnSecondary"
        android:translationZ="4dp"
        app:layout_constraintStart_toStartOf="@id/button"
        app:layout_constraintEnd_toEndOf="@id/button"
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/course_selection_button"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/img_trapezoid"
        app:layout_constraintStart_toStartOf="@+id/img_trapezoid"
        app:layout_constraintTop_toBottomOf="@+id/img_trapezoid" />

    <Button
        android:id="@+id/button3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/course_selection_button"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="@+id/img_triangle"
        app:layout_constraintStart_toStartOf="@+id/img_triangle"
        app:layout_constraintTop_toBottomOf="@+id/img_triangle" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/course_selection_button"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/course_selection_button"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>